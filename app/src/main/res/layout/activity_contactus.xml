<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eff2f7"
    tools:context=".Contactus">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:contentDescription="@string/title_notifications"
            android:scaleType="centerCrop"
            android:src="@drawable/roundlogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileimg"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold|normal"
            app:layout_constraintTop_toBottomOf="@+id/profileimg" />
        <LinearLayout
            android:weightSum="3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:gravity="center"
            android:baselineAligned="true">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/email"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#FEB200"
                    android:src="@android:drawable/ic_dialog_email"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_alignStart="@+id/email"
                    android:layout_alignEnd="@+id/email"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Email"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/fb"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#44609C"
                    android:scaleType="fitXY"
                    android:src="@drawable/fb"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fb"
                    android:layout_alignStart="@+id/fb"
                    android:layout_alignEnd="@+id/fb"
                    android:layout_marginStart="-14dp"
                    android:layout_marginEnd="-14dp"
                    android:text="Facebook"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                 <ImageButton
                    android:id="@+id/insta"
                     android:layout_centerHorizontal="true"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/round_button"
                    android:scaleType="fitXY"
                    android:src="@drawable/insta"
                    tools:ignore="ContentDescription,HardcodedText,UnusedAttribute" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/insta"
                    android:layout_alignStart="@+id/insta"
                    android:layout_alignEnd="@+id/insta"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-15dp"
                    android:layout_marginEnd="-16dp"
                    android:text="Instagram"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>